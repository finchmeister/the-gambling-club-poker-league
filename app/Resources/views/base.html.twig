<!DOCTYPE html>
<html>
    <head>
        <title>{% block pageTitle %}The Gambling Club Poker League{% endblock %}</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('assets/css/vendor/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/css/app.css') }}">
            <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
                  rel="stylesheet">

            <link href="{{ asset('assets/font/css/open-iconic-bootstrap.min.css') }}" rel="stylesheet">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="manifest" href="{{ asset('manifest.json') }}">

    </head>
    <body>
    {% block header %}

        <nav class="navbar navbar-expand-lg navbar-light bg-light">

            <div class="container">
                <a class="navbar-brand" href="{{ path('homepage') }}">The Gambling Club Poker League</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mr-auto">
                        {# TODO #}
                        <li class="nav-item {% if app.request.attributes.get('_route') == 'player_index' %}active{% endif %}">
                            <a class="nav-link" href="{{ path('player_index') }}">Players</a>
                        </li>

                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item {% if app.request.attributes.get('_route') == 'admin_player_index' %}active{% endif %}">
                                <a class="nav-link" href="{{ path('admin_player_index') }}">
                                    Edit Players
                                </a>
                            </li>
                            <li class="nav-item {% if app.request.attributes.get('_route') == 'game_index' %}active{% endif %}">
                                <a class="nav-link" href="{{ path('game_index') }}">
                                    Edit Games
                                </a>
                            </li>



                        {% endif %}


                    </ul>
                    <span class="">

                        {% if app.user %}


                            <a class="btn btn-outline-danger" role="button" href="{{ path('logout') }}">Logout</a>
                        {% else %}
                            <a class="btn btn-outline-success" role="button" href="{{ path('admin') }}">Login</a>


                        {% endif %}


                    </span>
                </div>
            </div>

        </nav>


    {% endblock %}

    {% block jumbotron %}
    {% endblock %}

    <div class="container">


        {% block body %}


            <div class="row">
                <div class="col-12">
                    <h1 class="my-4">{% block title %}{% endblock %}</h1>
                </div>
            </div>

            <div class="row">
                <div class="col-md-9">
                    {{ include('default/_flash_messages.html.twig') }}
                    {% block main %}

                    {% endblock %}
                </div>

                <div class="col-md-3">
                    {% block sidebar %}
                    {% endblock %}
                </div>
            </div>

        {% endblock %}

    </div>



    {% block footer %}

        <footer class="footer bg-light">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <p>{{ 'now'|date('Y') }} - The Gambling Club Poker League</p>
                        <p></p>
                    </div>
                    <div class="col-md-6 text-right">
                        <p>
                            <a target="_blank" href="https://github.com/finchmeister/the-gambling-club-poker-league"><i class="fa fa-github" aria-hidden="true"></i></a>
                        </p>
                    </div>
                </div>
            </div>
        </footer>

    {% endblock %}


    {% block javascripts %}
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
    {% endblock %}
    </body>
</html>
