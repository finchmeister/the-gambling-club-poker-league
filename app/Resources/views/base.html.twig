<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}The Gambling Club Poker League{% endblock %}</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('assets/css/vendor/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/css/vendor/font-awesome-4.7.0/css/font-awesome.min.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/css/app.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    {% block header %}

        <nav class="navbar navbar-expand-lg navbar-light bg-light">

            <div class="container">
                <a class="navbar-brand" href="{{ path('homepage') }}">The Gambling Club Poker League</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mr-auto">
                        {# TODO #}
                        <li class="nav-item {% if app.request.attributes.get('_route') == 'player_index' %}active{% endif %}">
                            <a class="nav-link" href="{{ path('player_index') }}">Players</a>
                        </li>

                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item {% if app.request.attributes.get('_route') == 'admin_player_index' %}active{% endif %}">
                                <a class="nav-link" href="{{ path('admin_player_index') }}">
                                    Edit Players
                                </a>
                            </li>
                            <li class="nav-item {% if app.request.attributes.get('_route') == 'game_index' %}active{% endif %}">
                                <a class="nav-link" href="{{ path('game_index') }}">
                                    Edit Game
                                </a>
                            </li>



                        {% endif %}


                    </ul>
                    <span class="navbar-text">

                        {% if app.user %}
                            <a class="nav-link" href="{{ path('logout') }}"><i class="fa fa-sign-out" aria-hidden="true"></i> Logout</a>
                        {% else %}
                            <a class="nav-link"  href="{{ path('admin') }}"><i class="fa fa-sign-in" aria-hidden="true"></i> Login</a>


                        {% endif %}


                    </span>
                </div>
            </div>

        </nav>


    {% endblock %}

    {% block jumbotron %}
    {% endblock %}

    <div class="container">
        {% block body %}{% endblock %}

    </div>



    {% block footer %}

        <footer class="footer bg-light">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <p>{{ 'now'|date('Y') }} - The Gambling Club Poker League</p>
                        <p></p>
                    </div>
                    <div class="col-md-6">
                        <p>
                            Links to source?
                        </p>
                    </div>
                </div>
            </div>
        </footer>

    {% endblock %}


    {% block javascripts %}
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
    {% endblock %}
    </body>
</html>
