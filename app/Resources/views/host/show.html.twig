{% extends 'base.html.twig' %}

{% block title %}{{ host.name }} - Host Stats{% endblock %}

{% block main %}

<div class="row">
    <div class="col-sm-9">
        <ul>
            <li>Games played: x</li>
            <li>Amount won: {{ hostStats.sumCashWon }}</li>
            <li>No of rebuys: {{ hostStats.sumRebuys }}</li>
            <li>Most wins:</li>
            <li>Biggest winner:</li>
            <li>Fortress: host won/played</li>
        </ul>

    </div>
    <div class="col-sm-3">
        <img src="{{ host.profilePicturePublicUrl ?: 'http://via.placeholder.com/350x350' }}" class="img-fluid rounded">
    </div>
</div>


// TODO: Display games played here.



{% endblock %}

{% block sidebar %}

    <a class="btn btn-primary btn-lg btn-block" href="{{ path('player_show', { 'id': host.id }) }}" role="button">Go to Player Stats</a>


{% endblock %}
