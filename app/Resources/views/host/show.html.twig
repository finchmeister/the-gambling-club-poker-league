{% extends 'base.html.twig' %}

{% block title %}{{ host.name }} - Host Stats{% endblock %}

{% block main %}

<div class="row">
    <div class="col-sm-9">
        <ul>
            <li>Games played: {{ hostStats.countGamesPlayed }}</li>
            <li>Amount won: {{ hostStats.sumCashWon }}</li>
            <li>No of rebuys: {{ hostStats.sumRebuys }}</li>
                {% if hostStats.maxCountWinsPlayer %}
            <li>Most wins:
                    {{ hostStats.maxCountWinsPlayer }} ({{ hostStats.maxCountWins }})
                {% endif %}</li>
            <li>Host wins: {{ hostStats.countHostWins }}</li>
            <li>Fortress: {{ hostStats.countHostWins }}/{{ hostStats.countGamesPlayed }} {{ hostStats.fortressRatio|percent }}</li>
        </ul>

    </div>
    <div class="col-sm-3">
        <img src="{{ host.profilePicturePublicUrl ?: 'http://via.placeholder.com/350x350' }}" class="img-fluid rounded">
    </div>
</div>

    <h2>Games</h2>

    {% include 'partial/_game.html.twig' %}

{% endblock %}

{% block sidebar %}

    <a class="btn btn-primary btn-lg btn-block" href="{{ path('player_show', { 'id': host.id }) }}" role="button">Go to Player Stats</a>


{% endblock %}
