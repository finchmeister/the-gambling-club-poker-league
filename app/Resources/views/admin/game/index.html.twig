{% extends 'base.html.twig' %}


{% block title %}Game list{% endblock %}

{% block main %}

    {% if games %}
        <table class="table table-striped text-center table-responsive-md">
            <thead >
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th class="text-left">Host</th>
                <th>No of Players</th>
                <th>Buy in</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for game in games %}
                <tr>
                    <td><a href="{{ path('game_edit', { 'id': game.id }) }}">{{ game.id }}</a></td>
                    <td>{% if game.date %}{{ game.date|date(date_format) }}{% endif %}</td>
                    <td class="text-left">{{ game.host }}</td>
                    <td>{{ game.noOfPlayers }}</td>
                    <td>Â£{{ game.buyIn }}</td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('game_edit', { 'id': game.id }) }}">Edit</a>
                    </td>

                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p class="lead">No games have been created yet</p>
    {% endif %}


{% endblock %}


    {% block sidebar %}

            <a class="p-2 btn btn-success btn-lg btn-block" role="button" href="{{ path('game_new') }}">Create a new game</a>

            <a class="p-2 btn btn-primary btn-lg btn-block" role="button" href="{{ path('admin') }}">Back to admin</a>
    {% endblock %}