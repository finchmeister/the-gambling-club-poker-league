{% extends 'admin/index_base.html.twig' %}

{% block adminTitle %}Edit Player{% endblock %}


 {% block main %}

     {{ form_start(edit_form) }}

     <div class="form-group">
         {{ form_label(edit_form.name) }}
         {{ form_widget(edit_form.name, {'attr': {'class': 'form-control'}}) }}
     </div>

     <div class="form-group">
         {{ form_label(edit_form.location) }}
         {{ form_widget(edit_form.location, {'attr': {'class': 'form-control'}}) }}
     </div>

     <div class="form-group">

         {{ form_label(edit_form.leaguePlayer) }}
         {{ form_widget(edit_form.leaguePlayer, {'attr': {'class': 'form-control'}}) }}

     </div>

     <div class="form-group">

         {{ form_label(edit_form.bio) }}
         {{ form_widget(edit_form.bio, {'attr': {'class': 'form-control', 'rows':5}}) }}

     </div>




     <input  class="btn btn-primary" type="submit" value="Save" />
     {{ form_end(edit_form) }}

     <a href="{{ path('admin_player_index') }}">Back to the list</a>

 {% endblock %}



{% block sidebar %}
    {{ form_start(delete_form) }}
    <input class="btn btn-danger"  type="submit" value="Delete">
    {{ form_end(delete_form) }}
{% endblock %}
